          ElseIf  ElementMap()\Gadget = eventGadget
            foundGadget = #True 
            foundCellGadget= #True            
          ElseIf ElementMap()\ChildGadgets <> 0
            
            ForEach ElementMap()\ChildGadgets\Gadgets()
              
              If ElementMap()\ChildGadgets\Gadgets() = eventGadget
